{
  "name": "buildtrust-backend",
  "version": "1.0.0",
  "description": "BuildTrust backend API with Node.js and MySQL",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required for this project'",
    "lint": "eslint src --ext .js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "audit": "npm audit --json",
    "audit:fix": "npm audit fix",
    "audit:fix:force": "npm audit fix --force"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.mjs"],
    "transform": {},
    "moduleFileExtensions": ["js","mjs","json","node"]
  },

  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.23.8",
    "multer": "1.4.4-lts.1",
    "superagent": "^10.2.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.6.1",
    "supertest": "^7.1.3",
    "cross-env": "^7.0.3"
  }
}
